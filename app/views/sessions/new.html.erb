<div class="login c-area">
  <div class="login-wrap" id="login_form">
    <div class="login-contents">
      <div class="login-title-box">
        <p class="login-title">オンライン資料作成サービス</p>
        <%= image_tag 'logo_blue.svg', {class: 'login-logo'} %>
      </div>
      <%= form_with url:login_path, class: "login-form-box", method: :post do |f| %>
        <dl class="login-item">
          <dt class="login-label">メールアドレス</dt>
          <dd class="login-input"><%= f.text_field :email %></dd>
        </dl>
        <dl class="login-item">
          <dt class="login-label">パスワード</dt>
          <dd class="login-input"><%= f.password_field :password %></dd>
        </dl>
        <%= f.submit  "ログイン", class: "login-button" %>
        <!--<%= link_to 'パスワードを忘れた方', root_path, class:"login-forgot" %>-->
      <% end %>
    </div>

  </div>
</div>
