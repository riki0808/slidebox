<%= form_with model: @user, local: true do |f| %>
  <dl>

    <dt><%= f.label :name, '名前', class:"user-new_label" %></dt>
    <dd><%= f.text_field :name, class:"user-new_inp"  %></dd>

    <dt><%= f.label :company, '会社', class:"user-new_label" %></dt>
    <dd><%= f.text_field :company, class:"user-new_inp"  %></dd>

    <dt><%= f.label :email, 'メールアドレス', class:"user-new_label" %></dt>
    <dd><%= f.text_field :email, class:"user-new_inp"  %></dd>

    <dt><%= f.label :password, 'パスワード', class:"user-new_label" %></dt>
    <dd><%= f.password_field :password, class:"user-new_inp"  %>  </dd>

    <dt><%= f.label :password_confirmation, 'パスワード確認', class:"user-new_label" %></dt>
    <dd><%= f.password_field :password_confirmation, class:"user-new_inp"  %></dd>

  </dl>

  <%= f.submit '登録', class:"user-new_submit" %>  
<% end %>
